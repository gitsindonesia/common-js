{
  "name": "@gits/common-js",
  "version": "0.0.1",
  "description": "Common Library from Gits Indonesia. Purpose to implement reusable code.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint 'src/**/*.{js,ts,jsx,tsx}' --quiet --fix",
    "clean": "rimraf dist",
    "tscBuild": "tsc --build",
    "build": "npm run clean && npm run tscBuild",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gitsindonesia/common-js.git"
  },
  "keywords": [
    "library"
  ],
  "author": "Ala Rai AbdiAllah",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jestSonar": {
    "reportPath": "coverage"
  }
}
